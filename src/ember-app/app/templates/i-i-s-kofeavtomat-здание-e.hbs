<h3 class="ui header">{{t "forms.i-i-s-kofeavtomat-здание-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.адреса
      class=(if (v-get validationModel "адреса" "isInvalid") "error")
      label=(t "forms.i-i-s-kofeavtomat-здание-e.адреса-caption")
      data-test-i-i-s-kofeavtomat-здание-e-адреса=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адреса" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерДома
      class=(if (v-get validationModel "номерДома" "isInvalid") "error")
      label=(t "forms.i-i-s-kofeavtomat-здание-e.номерДома-caption")
      data-test-i-i-s-kofeavtomat-здание-e-номерДома=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерДома" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kofeavtomat-здание-e.адрес-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.адрес
      relationName="адрес"
      projection="АдресL"
      title=(t "forms.i-i-s-kofeavtomat-здание-e.адрес-caption")
      readonly=readonly
      componentName="адресLookup"
      class=(if (v-get validationModel "адрес" "isInvalid") "error")
      data-test-i-i-s-kofeavtomat-здание-e-адрес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адрес" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.адрес.город
      class=(if (v-get validationModel.адрес "город" "isInvalid") "error")
      label=(t "forms.i-i-s-kofeavtomat-здание-e.адрес.город-caption")
      data-test-i-i-s-kofeavtomat-здание-e-адрес-город=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.адрес "город" "message")}}
  </div>
</form>
